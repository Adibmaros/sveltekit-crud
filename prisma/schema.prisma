
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

model Mahasiswa {
  id Int @id @default(autoincrement())
  name String
  jurusan String
  mata_kuliah Matakuliah[]
  @@map("mahasiswa")
}

model Matakuliah {
  id Int @id @default(autoincrement())
  name String
  sks Int
  @@map("mata_kuliah")

  mahasiswa Mahasiswa @relation(fields: [mahasiswaId], references: [id])
  mahasiswaId Int

}